# AuraSpeak Server Konfiguration
# Kopieren Sie diese Datei zu config.yaml und passen Sie die Werte an

# Allgemeine Einstellungen
environment: development
port: "8080"
jwt_secret: "your-secure-jwt-secret"
allowed_origins: "http://localhost:5173"

# Datenbank Konfiguration
db:
  host: localhost
  port: "5432"
  user: postgres
  password: your-db-password
  name: auraspeak

# STUN Server Konfiguration
stun_servers:
  - stun:stun.l.google.com:19302
  - stun:stun1.l.google.com:19302

# TURN Server Konfiguration
turn_servers:
  - url: turn:openrelay.metered.ca:80
    username: your-turn-username
    password: your-turn-password
  - url: turn:openrelay.metered.ca:443
    username: your-turn-username
    password: your-turn-password

# Lokaler TURN Server
local_turn:
  enabled: false
  public_ip: localhost
  port: 3478
  realm: auraspeak.local
  username: auraspeak
  password: your-turn-password
  max_connections: 1000
  connection_timeout: 30
  rate_limit:
    requests_per_second: 10
    burst_size: 20
  allowed_ips: []
  denied_ips: []

# Redis Konfiguration
redis:
  addr: localhost:6379
  password: your-redis-password
  db: 0 